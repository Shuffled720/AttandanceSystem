<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AttandanceSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AttandanceSystem"
    xmlns:pages="clr-namespace:AttandanceSystem.Pages"
    BackgroundColor="{StaticResource Primary}"
    FlyoutBehavior="Disabled"
    Title="AttandanceSystem">

    
    <ShellContent
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="home"/>
    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginFormPage}"
        Route="login"/>

</Shell>
