<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AttandanceSystem.Pages.LoginFormPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Shell.NavBarIsVisible="False"
             Title="LoginFormPage">

    <VerticalStackLayout Margin="20">
        <Label Text="Login" FontSize="Large" HorizontalTextAlignment="Center" />

        <Entry x:Name="Username"  Placeholder="Username" Text="{Binding Username}"/>
        <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password" IsPassword="True"/>

        <Button Text="Login" x:Name="LoginButton"
Clicked="LoginButton_Clicked" />

        <Label Text="Forgot Password?" TextColor="Blue" HorizontalTextAlignment="Center" Margin="10,0" />
    </VerticalStackLayout>
</ContentPage>
    
    
    