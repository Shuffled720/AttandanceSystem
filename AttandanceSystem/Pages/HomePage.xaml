<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AttandanceSystem.Pages.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Your Attendance App"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />



        <Button
         Margin="0,20,0,0"
         Text="Logout"
         x:Name="LogoutButton"
         Clicked="LogoutButton_Clicked"
         VerticalOptions="CenterAndExpand" 
         HorizontalOptions="Center"
         />
        <Button
          x:Name="Check_inButton"
          Margin="0,20,0,0"
          Text="Check-In"
          Clicked="OnCheckInClicked"
          VerticalOptions="CenterAndExpand" 
          HorizontalOptions="Center"
          />
        <Button
          x:Name="Check_outButton"
          Margin="0,20,0,0"
          Text="Check-Out"
          Clicked="OnCheckOutClicked"
          VerticalOptions="CenterAndExpand" 
          HorizontalOptions="Center"
          />

        <Label
            x:Name="Location"
            Text="No Location Data Found"/>




    </VerticalStackLayout>
</ContentPage>